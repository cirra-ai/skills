{
  "tool": "soql_query",
  "params": {
    "sObject": "Account",
    "fields": ["Id", "Name", "Industry", "BillingCity", "AnnualRevenue"],
    "whereClause": "Industry = 'Technology' AND CreatedDate >= LAST_N_DAYS:30",
    "orderBy": "Name ASC",
    "limit": 500,
    "sf_user": "prod"
  },
  "context": {
    "purpose": "Query recently created tech accounts for quarterly report"
  }
}
