{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "metadata_create|metadata_update|tooling_api_dml",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/pre-mcp-validate.py",
            "timeout": 60
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/post-tool-validate.py",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
